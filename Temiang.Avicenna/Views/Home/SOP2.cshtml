
<div class="row">
    <div class="col-12 text-right border border-top-0 border-left-0 border-right-0">
        <div style="float:left;margin-left:5px;margin-right:5px;"><h4><i class="fa fa-book"></i><span id="spanTitleSOP" class="pl-4">S O P</span></h4></div>
    </div>
</div>
<div class="row">
    <div class="col-12 pl-0 pr-4 py-0">
        <table class="table table-bordered table-striped" id="dtListSOP" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>File Name</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script type="text/javascript">
    var dtListSOP;
    $(document).ready(function () {
        dtListSOP = $('#dtListSOP').DataTable({
            "paging": false,
            "ordering": false,
            "info": false,
            "processing": true,
            "oLanguage": {
                "sProcessing": ReplaceLoadingIcon(_htmlLoading)
            },
            "serverSide": false,
            "scrollX": false,
            "columnDefs": [{
                "targets": '_all',
                "createdCell": function (td, cellData, rowData, row, col) {
                    $(td).css('padding-top', '0px');
                    $(td).css('padding-bottom', '0px');
                }
            }],
            "ajax": {
                "url": "@(ViewBag.UrlRoot)/Home/SOPFileList",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                {
                    title: "FileName", data: 'FileName', name: 'File Name', "autoWidth": true, "render": function (data, type, row, meta) {
                        //var rPart =
                        return " <a href=\"" + row.FileUrl + "\" target=\"_blank\">" + row.FileName + "</a>";
                    }
                }
            ],
            "order": [[0, "asc"]]
        });

        //dtTable.ajax.reload();
    });
</script>