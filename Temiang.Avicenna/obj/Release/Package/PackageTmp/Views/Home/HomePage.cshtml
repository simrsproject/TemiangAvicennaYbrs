<style>
    .fa-spin {
        -webkit-animation: fa-spin 0.75s infinite linear;
        animation: fa-spin 0.75s infinite linear;
    }
</style>

<div class="row">
    <div class="col-3 col-md-2">
        <div class="nav flex-column nav-tabs h-100" id="vert-tabs-tab" role="tablist" aria-orientation="vertical">
            @{
                int i = 0;
                var appPrgLink = ((AppProgramCollection)ViewBag.AppLink).Where(a => a.ParentProgramID == "16").OrderBy(a => a.RowIndex);

                foreach (var app in appPrgLink)
                {
                    <a onclick="@Html.Raw(string.Format(app.StoreProcedureName, "tabContent" + app.ProgramID.Replace(".", "_")))" class="nav-link @(i == 0 ? "active" : "")" id="tab@(app.ProgramID.Replace(".", "_"))" data-toggle="pill" href="#tabContent@(app.ProgramID.Replace(".", "_"))"
                       role="tab" aria-controls="tabContent@(app.ProgramID.Replace(".", "_"))" aria-selected="@(i == 0 ? "true" : "false")"><i class="@(app.AssemblyClassName)"></i>&nbsp;@(app.ProgramName)</a>
                    i++;
                }
            }
        </div>
    </div>
    <div class="col-9 col-md-10">
        <div class="tab-content" id="vert-tabs-tabContent">
            @{
                i = 0;
                foreach (var app in appPrgLink)
                {
                    <div class="tab-pane fade @(i == 0 ? "show active" : "")" id="tabContent@(app.ProgramID.Replace(".", "_"))" role="tabpanel" aria-labelledby="tab@(app.ProgramID.Replace(".", "_"))">

                    </div>
                    i++;
                }
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    var BaseURL = '@ViewBag.UrlRoot';
    $(document).ready(function () {
        @{
            if (appPrgLink.Count() > 0) {
                @Html.Raw(string.Format(appPrgLink.FirstOrDefault().StoreProcedureName,"tabContent"+ appPrgLink.FirstOrDefault().ProgramID.Replace(".", "_")))
            }
        }
    });
</script>