    <div class="form-group row mx-0 my-0">
        <label class="col-sm-4 px-0 py-0">Discount Reasons</label>
        <div class="col-8 px-0 py-0" id="divDiscReasons">
            @foreach (var dr in (AppStandardReferenceItemCollection)ViewBag.StdRef_DiscReasons)
            {
                <div class="float-left">
                    <input type="radio" name="rbDiscReason" value="@dr.ItemID" id="dr_@dr.ItemID") />
                    <label id="lbldr_@dr.ItemID" class="form-check-label" for="dr_@dr.ItemID">@dr.ItemName</label><text>&nbsp; &nbsp;</text>
                </div>
            }
        </div>
    </div>

