// Katanya supaya node.js service tidak mengganggu proses krn lumayan memakan resource (by Handono)
{
    "compilerOptions": {
        "allowJs": true,
        "noEmit": true
    },
    "exclude": [
        "wwwroot/JavaScript", //ignore everything in the JavaScript folder (bootstrap, jquery, etc)
        "wwwroot/Bootstrap"
        // add any other folders with library code here
    ],
    "typeAcquisition": {
        "enable": true,
        "include": [
            "bootstrap",
            "jquery" //list libraries you are using here
        ]
    }
}